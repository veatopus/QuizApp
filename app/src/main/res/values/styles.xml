<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="appBarLayoutStyle">@style/MyAppTheme</item>
        <item name="android:buttonStyle">@style/Button</item>

    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="MyAppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="questions_a">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#A9A9A9</item>
    </style>

    <style name="some_id">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#3F3356</item>
    </style>

    <style name="category">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#A9A9A9</item>
    </style>

    <style name="difficulty">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#A9A9A9</item>
    </style>

    <style name="text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="item_btn_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="item_btn2_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6979F8</item>
    </style>


    <style name="what_is_the">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1A051D</item>
    </style>

    <style name="navigation">
        <item name="android:textSize">17sp</item>
